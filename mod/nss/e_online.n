extern("inc_events")
extern("inc_online")

void main() {
	struct EventInfo ei = GetEventInfo();

	if ("module_load" == ei.ev) {
		onlineServerStart();
	}

	if ("module_hb" == ei.ev) {
		object oPC = GetFirstPC();
		while (GetIsPC(oPC)) {
			onlinePlayerUpdateLocation(oPC);
			oPC = GetNextPC();
		}
	}

	if ("player_login" == ei.ev) {
		onlinePlayerEnter(ei.actor);
	}
	
	if ("player_logout" == ei.ev) {
		onlinePlayerLeave(ei.actor);
	}

}
