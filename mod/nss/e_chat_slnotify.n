extern("inc_events")
extern("inc_chat")
extern("inc_cdb")

void main() {
	struct EventInfo ei = GetEventInfo();
	struct EventArguments ea = GetEventArguments(ei.serial);

	if (ei.ev == "chat_prefilter" && ea.i0 & CHATMODE_DM && !GetIsDM(ei.actor) && !GetIsDMOnline()) {
		SendMessageToPC(ei.actor, "Derzeit ist kein SL im Spiel online und deine Nachricht wurde von niemandem gelesen.");
	}
}


