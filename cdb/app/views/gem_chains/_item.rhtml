<tr>
	<% if amask(Account::CAN_EDIT_LOOT_CHAINS) && loot_helper != nil %>
	<td><%= loot_helper.text_field :stone, :size => 15 %></td>
	<td><%= loot_helper.text_field :area,:size => 15 %></td>
	<td><%= loot_helper.text_field :order, :size => 2 %></td>
	<td><%= loot_helper.text_field :replace, :size => 2 %></td>
	<td>
		<div class="loot_input">
		<%= loot_helper.text_field :loot  %>
		</div>
		<div class="loot_input_trigger">
		<small><%= CraftingProduct::RESREFS[loot.loot.split(":",2)[0]] && CraftingProduct::RESREFS[loot.loot.split(":",2)[0]][:name]%><%= ":" + loot.loot.split(":",2)[1] if loot.loot.split(":")[1] %></small>
		</div>
	</td>
	<td><%= loot_helper.text_field :chance, :size => 10%></td>
	<% else %>
	<td><%= loot.stone %></td>
	<td><%= loot.area %></td>
	<td><%= loot.order %></td>
	<td><%= loot.replace %></td>
	<td><%= CraftingProduct::RESREFS[loot.loot.split(":",2)[0]] && CraftingProduct::RESREFS[loot.loot.split(":",2)[0]][:name]%><%= ":" + loot.loot.split(":",2)[1] if loot.loot.split(":")[1] %><br><small><%= loot.loot %></small></td>
	<td><%= "%f" % loot.chance %></td>
	<% end %>
	<td>
	<%= link_to_if amask(Account::CAN_EDIT_LOOT_CHAINS), "delete", 
		:action => 'kill', :id => loot.id %>
	</td>
</tr>
