CXX = g++
LIBS = 
DEBUG =
FLAGS = $(DEBUG) -w -fPIC -shared -W -Wall -Llib/
DEFS = -DHAVE_CONFIG_H

# TODO: snarf from configure somehow
# the user should be able to specify NWNXDIR
# if NWNXDIR is not specified, configure should
# probe (.. ../linnwnx2) and die if not found.
# NWNXDIR = @NWNXDIR@
NWNXDIR = ../linnwnx2

# CFLAGS = -g -O2 -I$(NWNXDIR)
# CXXFLAGS= -g -O2 $(CFLAGS)
CPPFLAGS = -mcpu=i386 $(DEBUG) -I$(NWNXDIR)

NWNXBASE=$(NWNXDIR)/NWNXBase.o $(NWNXDIR)/gline.o

all: nwnx_structs.so

nwnx_structs.so: HookFunc.o NWNXStruct.o plugin-structs.o $(NWNXBASE)
	$(CXX) $(FLAGS) -o $@ $^ $(LIBS) $(DEFS) 

clean:
	/bin/rm -f *.o *.so

distclean: clean
	/bin/rm -f Makefile
